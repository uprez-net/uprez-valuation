# App Configuration
NEXT_PUBLIC_APP_NAME="Uprez Valuation Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_WS_URL="http://localhost:8000"

# Authentication
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Database (if using Prisma/direct DB connection)
DATABASE_URL="postgresql://username:password@localhost:5432/uprez_valuation"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# File Storage
NEXT_PUBLIC_STORAGE_BUCKET="uprez-documents"
STORAGE_ACCESS_KEY_ID="your-access-key"
STORAGE_SECRET_ACCESS_KEY="your-secret-key"
STORAGE_REGION="us-east-1"

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_HOTJAR_ID="XXXXXXX"

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES="true"
NEXT_PUBLIC_ENABLE_COLLABORATION="true"
NEXT_PUBLIC_ENABLE_REAL_TIME="true"

# Security
ENCRYPTION_SECRET="your-encryption-secret-here"
JWT_SECRET="your-jwt-secret-here"

# Email Service
EMAIL_FROM="noreply@uprez.com"
EMAIL_API_KEY="your-email-api-key"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
NEXT_PUBLIC_SENTRY_DSN="your-public-sentry-dsn"

# Development
NODE_ENV="development"
NEXT_PUBLIC_DEBUG="true"