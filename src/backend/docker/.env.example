# Environment Configuration Example
# Copy this file to .env and update values as needed

# Environment
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Database
POSTGRES_PASSWORD=secure_postgres_password
DATABASE__HOST=postgres
DATABASE__PORT=5432
DATABASE__DATABASE=uprez_valuation
DATABASE__USERNAME=postgres
DATABASE__PASSWORD=secure_postgres_password

# Redis
REDIS_PASSWORD=secure_redis_password
REDIS__HOST=redis
REDIS__PORT=6379
REDIS__PASSWORD=secure_redis_password

# Celery
CELERY__BROKER_URL=redis://:secure_redis_password@redis:6379/1
CELERY__RESULT_BACKEND=redis://:secure_redis_password@redis:6379/2

# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id
GCP__PROJECT_ID=your-gcp-project-id
GCP__REGION=us-central1
GCP__DOCUMENT_AI_PROCESSOR_ID=your-processor-id
GCP__STORAGE_BUCKET=your-storage-bucket
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
GRAFANA_PASSWORD=secure_grafana_password
FLOWER_AUTH=admin:secure_flower_password

# API Configuration
API__TITLE=Uprez Valuation Platform API
API__VERSION=1.0.0

# Security Settings
SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY__RATE_LIMIT_PER_MINUTE=100
CORS_ORIGINS=http://localhost:3000,https://app.uprez.com

# ML Settings
ML__MODEL_CACHE_SIZE=100
ML__BATCH_SIZE=32

# File Upload
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Email (if using email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# External APIs (if using)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
QUANDL_API_KEY=your-quandl-key
YAHOO_FINANCE_API_KEY=your-yahoo-finance-key